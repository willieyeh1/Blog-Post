{{!-- {{#each userJokes as |userjoke|}} --}}
<link rel='stylesheet' href='/css/profile.css' />
<div class="yoursaves" style="width: 90%; margin: auto">

        <div class="left-side-profile">
            <div class="names text-white">
                <h1>Your Blog Posts</h1>
            </div>
            <div class="container-profile">
                {{#each userJokes as |userjoke|}}
                <div class="container-profile-card">
                    <div class="row">
                        <div class="col-12">{{content}}</div>
                    </div>
                    <div class="row" id="row-count-likes">
                        <div class="col-3">
                            {{likecounter}} likes
                        </div>
                    
                        <div class="col-9 text-end">
                            <button class="delete-btn" id="post-delete-btn">
                                <i class="fa-solid fa-trash-can" post-id='{{id}}'></i>
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="right-side-profile">
            <div class="names text-white">
                <h1>Saved</h1>
            </div>
            <div class="container-profile">
                {{#each userData.saves as |userdata|}}
                {{!-- {{#if userdata.userSavedPost}} --}}
                <div class="container-profile-card">
                    <div class="row">
                        <div class="col-10">{{content}} {{punchline}}</div>
                        <div class="col-2 text-end" id="authorname"><a href="/profile/{{userdata.user.id}}"> @{{userdata.user.username}}</a></div>
                    </div>
                    <div class="row" id="row-count-likes">
                        <div class="col-3">
                            {{likecount}} likes
                        </div>
                        <div class="col-9 text-end">
                            <button class="delete-btn text-white" id="remove-bookmark-btn">
                                <i class="fa-solid fa-trash-can" post-id="{{userdata.id}}"></i>
                            </button>
                        </div>
                    </div>
                </div>
                {{!-- {{/if}} --}}
                {{/each}}
            </div>
        </div>
</div>    

<script src="/js/deletepost.js"></script>
<script src="/js/removesaved.js"></script>